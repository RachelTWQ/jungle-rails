<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>     
    </div>

  </article>
  <br/>
  <% if current_user %>
  <h3>Write a Review</h3>

  <%= form_for [@product, @review] do |form| %>

   <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <strong>The following errors prevented saving:</strong>
        <ul>
          <% form.object.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %> 
 
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, (1..5), class: 'form-control' %>
  </div>

  <%= form.submit 'Submit Review', class: 'btn btn-primary' %>

  <% end %>

  <% else %>
  <div>
    <h3>Please log in to write a review</h3>
  </div> 
  <% end %>

  <% if @product.reviews.size != 0 %>
  <span class="heading">User Rating</span>
  <% if @product.reviews.size == 1 %>
  <% @product.reviews[0].rating.round(1).to_i.times do %>
   <span class="fa fa-star checked"></span>
  <% end %>
  <p><%= @product.reviews[0].rating.round(1) %> based on 1 review.</p>
  <% else %>
  <% @product.reviews.average(:rating).to_i.times do %>
   <span class="fa fa-star checked"></span>
  <% end %>
  <p><%= @product.reviews.average(:rating).round(1) %> average based on <%= @product.reviews.size %> reviews.</p>
  <% end %>
  <table class="table">
    <thead>
      <th scope="col">User</th>
      <th scope="col">Rating</th>
      <th scope="col" class="col-sm-2">Review</th>
    </thead>
    <tbody>

      <% @product.reviews.reverse.each do |r| %>

      <%= render 'review', {review: r, product: @product} %>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <h4> There is no review for this product. </h4>
  <% end %>
</section>
