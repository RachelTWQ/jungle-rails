<% if user = review.user %>
  <tr>
    <td><span><%= user.first_name %> <%= user.last_name %></span></td>
    <td>
    <% review.rating.to_i.times do %>
    <span class="glyphicon glyphicon-star"></span>
    <% end %>
    <% ( 5 - review.rating).to_i.times do %>
    <span class="glyphicon glyphicon-star-empty"></span>
    <% end %>
    </td>
    <td><p class="review description"><%= review.description %></p></td>
    <td>
    <% if current_user && review.user_id == current_user.id %>
        <%= link_to fa_icon("trash"), [@product, review], method: :delete, data: { confirm: 'Are you sure?' }  %>
    <% end %>
    </td>
  </tr>
<% end %>